<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity GameClass.
    -->
    <changeSet id="20220813223220-1" author="jhipster">
        <createTable tableName="game_class" remarks="Which Game engine/jar to play.">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="name" type="varchar(45)">
                <constraints nullable="true" />
            </column>
            <column name="revision" type="varchar(45)">
                <constraints nullable="true" />
            </column>
            <column name="launcher_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="game_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="docs_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="props_names" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="updated" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="game_class" columnName="updated" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
